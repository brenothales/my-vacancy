!!!
%html
  %head
    %title= t('general.admin_title')
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application" 
    %meta{ :name => 'viewport', :content => 'width=device-width, initial-scale=1.0' }
    = csrf_meta_tags
 
  %body
    .container

      .navbar.navbar-fixed-top.navbar-static-top
        .navbar-inner
          .container.nav-collapsecollapse
            %a.brand Nameless Project
            .nav-collapse.collapse            
              = create_menus
              .pull-right
                %ul.nav.pull-right
                  %li.dropdown
                    = link_to "#{t('preferences.welcome')} #{current_user.name}  <b class='caret'></b>".html_safe, '#', :class => 'dropdown-toggle', :data => { :toggle => :dropdown }
                    %ul.dropdown-menu
                      %li= link_to "<i class='icon-cog'></i> #{t('preferences.my_profile')}".html_safe, "#"
                      %li= link_to "<i class='icon-cog'></i> #{t('preferences.edit_profile')}".html_safe, "#"
                      %li.divider
                      %li= link_to "<i class='icon-off'></i> #{t('preferences.logout')}".html_safe, destroy_user_session_path, :method => :delete, :confirm => t('devise_forms.logout_confirm')

      = show_flash(flash) if flash
      %div{ :style => 'margin-top:10px' }
        = yield 
    
    = render '/shared/footer'




