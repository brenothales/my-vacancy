- meta_title "#{t('general.application_name')} > #{t('page.titles.register')}"

%div.well.span4.offset4
  %h2= t('devise_forms.sign_up')
  %hr
  %p= show_flash(flash)
  = simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => :validate }) do |f|
    = f.error_notification

    .form_inputs
      = f.input :name, :label => t('labels.name'), :required => true, :autofocus => true, :placeholder => t("placeholders.name"), :input_html => { :class => 'span4' }
      = f.input :email, :label => t('labels.email'), :required => true, :autofocus => true, :placeholder => t("placeholders.email"), :input_html => { :class => 'span4' }
      = f.input :password, :label =>  t('labels.password'), :required => true, :placeholder => t("placeholders.password"), :input_html => { :class => 'span4' }
      = f.input :password_confirmation, :label =>  t('labels.password_confirmation'), :required => false, :placeholder => t("placeholders.password_confirmation"), :input_html => { :class => 'span4' }
      = f.input :phone, :label =>  t('labels.phone'), :required => true, :autofocus => true, :placeholder => t("placeholders.cel"), :input_html => { :class => 'span4' }, :hint => "<small>Exemplo : (XX) XXXX-XXXX</small>".html_safe
    .form_inputs
      = f.button :submit, t('devise_forms.sign_up_button'), :class => 'btn btn-large btn-block btn-primary'
    %hr
    .form_inputs
      %label.checkbox
        = f.input :remember_me, :label => t('devise_forms.remember_me'), :as => :boolean if devise_mapping.rememberable?

  = render "devise/shared/links"


