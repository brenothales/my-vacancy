= form_tag route_for_search, :method => :get, :class => 'form-inline', :id => 'form-search' do 
  = text_field_tag :search, params[:search], :class => 'input-xlarge', :placeholder => t('placeholders.search')
  = submit_tag t('forms.search.submit'), :class => 'btn btn-info', :id => 'search-button'
  = hidden_field_tag :order_by, params[:order_by]
  = hidden_field_tag :ordem, params[:ordem]
