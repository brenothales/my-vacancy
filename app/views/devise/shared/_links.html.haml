%span.pull-left
  - if controller_name != 'sessions'  
    = link_to t(:sign_in_button), new_session_path(resource_name), :class => 'btn btn-success'

%span.pull-left
  - if devise_mapping.registerable? && controller_name != 'registrations'
    = link_to t(:sign_up), new_registration_path(resource_name), :class => 'btn btn-success'

%span.pull-right
  - if devise_mapping.recoverable? && controller_name != 'passwords'
    = link_to t(:forgot_password), new_password_path(resource_name), :class => 'btn btn-info'

