%div.well.span4.offset4
  %h2= t(:forgot_password)
  %hr
  = simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| 
    = f.error_notification
    .form-inputs
      = f.input :email, :required => true, :autofocus => true, :placeholder => 'nova senha', :input_html => { :class => 'span4' }
    .form-actions
      = f.button :submit, t(:send_instructions), :class => 'btn btn-large btn-block btn-primary'

  %span.pull-left= link_to t(:sign_in), new_session_path(resource_name), :class => 'btn btn-success'

  %span.pull-right= link_to t(:sign_up), new_registration_path(resource_name), :class => 'btn btn-warning'
  
